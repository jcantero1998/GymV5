<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragments.ClockFragment">

    <ImageButton
        android:id="@+id/imageButtonSilenciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:src="@drawable/sonar"
        android:tint="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextMinutos"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-black"
                android:gravity="bottom|right"
                android:text="01"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="@drawable/disabled"
                android:textSize="80dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="bottom|center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="80dp" />

            <EditText
                android:id="@+id/editTextSegundos"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-black"
                android:gravity="bottom|left"
                android:text="30"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="@drawable/disabled"
                android:textSize="80dp" />

        </LinearLayout>
        <Button
            android:id="@+id/btnIniciarCuentaAtras"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:backgroundTint="@color/primary"
            android:text="@string/btnIniciarCuentaAtras"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="sans-serif-black"
            android:backgroundTint="@color/primary"
            android:text="@string/btnREINICIAR"
            android:textSize="30dp" />

    </LinearLayout>
</RelativeLayout>